<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CryptoApp.ViewModels"
    x:Class="CryptoApp.Views.MainPage"
    Title="CryptoApp" Height="525" Width="800">

    <Grid Margin="10">
        <StackPanel>
           

            <TextBlock Text="Top 10 Cryptocurrencies" FontSize="20" FontWeight="Bold" FontFamily="Arial Black" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                
                <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,10,0"/>


            </StackPanel>

            <Button Content="Refresh" Command="{Binding Refresh}" Width="778">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="RoyalBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="FontFamily" Value="Arial Black"/>
                    </Style>
                </Button.Style>
            </Button>

            <ListView ItemsSource="{Binding Coins}" FontFamily="Arial Black" Height="344">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}" Width="100"/>
                        <GridViewColumn Header="Price (USD)" DisplayMemberBinding="{Binding CurrentPrice}" Width="150"/>
                        <GridViewColumn Header="Change 24h (%)" DisplayMemberBinding="{Binding PricePercentage24h}" Width="150"/>
                        <GridViewColumn Header="Details">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="View" 
                                            Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding Id}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="RoyalBlue"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Padding" Value="5"/>
                                                <Setter Property="FontFamily" Value="Arial Black"/>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
