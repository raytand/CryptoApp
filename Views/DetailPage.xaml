<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CryptoApp.ViewModels"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="CryptoApp.Views.DetailPage"
        Title="Coin Details" Height="600" Width="600">
    <Grid Margin="10">
		<StackPanel>
			<TextBlock Text="{Binding Coin.Name}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
			<TextBlock Text="Symbol:" FontWeight="Bold"/>
			<TextBlock Text="{Binding Coin.Symbol}" Margin="0,0,0,10"/>
			<TextBlock Text="Current Price (USD):" FontWeight="Bold"/>
			<TextBlock Text="{Binding Coin.CurrentPrice}" Margin="0,0,0,10"/>
			<TextBlock Text="Market Cap:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Coin.MarketCap}" Margin="0,0,0,10"/>
            <TextBlock Text="Price Change 24h (%):" FontWeight="Bold"/>
			<TextBlock Text="{Binding Coin.PriceChangePercentage24h}" Margin="0,0,0,10"/>

			
			<TextBlock><Run Text="Homepage: "/><Run Text=" "/><Hyperlink NavigateUri="{Binding Coin.Homepage}" RequestNavigate="Hyperlink_RequestNavigate"><InlineUIContainer>
					<TextBlock Text="{Binding Coin.Homepage}"/>
					</InlineUIContainer></Hyperlink></TextBlock>

			<TextBlock Text="Markets:" FontWeight="Bold" Margin="0,20,0,10"/>
			<ListView ItemsSource="{Binding Markets}" Height="250" av:ItemsSource="{av:SampleData ItemCount=5}">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Exchange" DisplayMemberBinding="{Binding Exchange}" Width="150"/>
						<GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="100"/>
						<GridViewColumn Header="Trade URL">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock><Hyperlink NavigateUri="{Binding TradeUrl}" RequestNavigate="Hyperlink_RequestNavigate"><InlineUIContainer>
											<TextBlock Text="{Binding TradeUrl}"/>
											</InlineUIContainer></Hyperlink></TextBlock>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</StackPanel>
	</Grid>
</Window>
